@page "/Admin/Theater/Add"
@{
   Layout = "_AdminLayout";
   ViewData["Title"] = "Add Theater";
}
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.EntityFrameworkCore
@using the_movie_hub.Models
@model the_movie_hub.Pages.Admin.Theater.AddTheaterModel

<div class="p-21">
   <div class="rounded-lg shadow-lg bg-white p-21">
      <div class="flex">
         <div class="bg-white text-black border border-black w-full p-5 rounded-lg shadow-lg">
            <div class="w-full mx-auto">
               <div class="flex w-full justify-between items-center">
                  <div
                     class="flex gap-2 items-center cursor-pointer border border-black rounded px-2 py-1 hover:bg-gray-200">
                     <svg xmlns="http://www.w3.org/2000/svg" class="w-5 text-black" viewBox="0 0 20 20"
                        fill="currentColor">
                        <path fill-rule="evenodd"
                           d="M7.793 2.232a.75.75 0 0 1-.025 1.06L3.622 7.25h10.003a5.375 5.375 0 0 1 0 10.75H10.75a.75.75 0 0 1 0-1.5h2.875a3.875 3.875 0 0 0 0-7.75H3.622l4.146 3.957a.75.75 0 0 1-1.036 1.085l-5.5-5.25a.75.75 0 0 1 0-1.085l5.5-5.25a.75.75 0 0 1 1.06.025Z"
                           clip-rule="evenodd" />
                     </svg>
                     <a href='/Admin/Theater' class="text-black">Quay lại</a>
                  </div>
               </div>
            </div>

            <form method="post" enctype="multipart/form-data" class="w-full flex flex-wrap">
               <div class="w-full p-5">
                  <div class="mb-4 flex md:block gap-5">
                     <label for="name" class="block mb-2">Tên rạp</label>
                     <input type="text" id="name" name="Name" class="w-full p-2 border border-gray-300 rounded" required
                        placeholder="Name...">
                  </div>
                  <div class="mb-4 flex md:block gap-5">
                     <label for="address-cinema" class="block mb-2">Thành phố</label>
                     <input type="text" id="address-cinema" name="City"
                        class="w-full p-2 border border-gray-300 rounded" required placeholder="Address...">
                  </div>
                  <div class="mb-4 flex md:block gap-5">
                     <label for="cinema-image" class="block mb-2">Ảnh rạp</label>
                     <input type="file" id="cinema-image" name="Image" class="w-full p-2 border border-gray-300 rounded"
                        accept="image/*" required>
                  </div>
                  <div class="mb-4 flex md:block gap-5">
                     <label for="cinema-image" class="block mb-2">Ảnh rạp</label>
                     <input type="file" id="cinema-image" name="Image" class="w-full p-2 border border-gray-300 rounded"
                        accept="image/*" required>
                  </div>
                  <div class="mt-5 flex md:block gap-5">
                     <button type="submit"
                        class="w-full p-3 bg-green-500 text-white rounded hover:bg-green-600">Lưu</button>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>

<script>
   function changeRoomCount(amount) {
      var roomInput = document.getElementById('room');
      var currentCount = parseInt(roomInput.value);
      var newCount = currentCount + amount;
      if (newCount >= 1) {
         roomInput.value = newCount;
      }
   }
</script>
