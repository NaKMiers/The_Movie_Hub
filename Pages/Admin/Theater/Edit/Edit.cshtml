<div class="w-full p-21">
   <div class="bg-white rounded-lg shadow-lg p-21 text-dark">
      <div class="w-full mx-auto">
         <div class="flex w-full justify-between items-center">
            <div class="flex gap-2 items-center cursor-pointer border border-black rounded px-2 py-1 hover:bg-gray-200">
               <svg xmlns="http://www.w3.org/2000/svg" class="w-5 text-black" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd"
                     d="M7.793 2.232a.75.75 0 0 1-.025 1.06L3.622 7.25h10.003a5.375 5.375 0 0 1 0 10.75H10.75a.75.75 0 0 1 0-1.5h2.875a3.875 3.875 0 0 0 0-7.75H3.622l4.146 3.957a.75.75 0 0 1-1.036 1.085l-5.5-5.25a.75.75 0 0 1 0-1.085l5.5-5.25a.75.75 0 0 1 1.06.025Z"
                     clip-rule="evenodd" />
               </svg>
               <a href='/Admin/Theater' class="text-black">Quay lại</a>
            </div>
         </div>
      </div>

      <form method="post" enctype="multipart/form-data" class="w-full flex flex-wrap">
         <div class="w-full p-5">
            <div class="mb-4 flex md:block gap-5">
               <label for="name" class="block mb-2">Tên rạp</label>
               <input type="text" id="name" value="@Model.Theater?.Name" name="Name"
                  class="w-full p-2 border border-gray-300 rounded" required placeholder="Name...">
            </div>
            <div class="mb-4 flex md:block gap-5">
               <label for="address-cinema" class="block mb-2">Địa chỉ rạp</label>
               <input type="text" id="address-cinema" value="@Model.Theater?.Address" name="Address"
                  class="w-full p-2 border border-gray-300 rounded" required placeholder="Address...">
            </div>
            <div class="mb-4 flex md:block gap-5">
               <label for="room" class="block mb-2">Phòng</label>
               <input type="number" id="room" value="@Model.Theater?.RoomAmount" name="RoomAmount"
                  class="w-full p-2 border border-gray-300 rounded" min="1" required placeholder="Room Amount...">
            </div>
            <div class="mb-4 flex md:block gap-5">
               <label for="cinema-image" class="block mb-2">Ảnh rạp</label>
               <input type="file" id="cinema-image" name="Image" class="w-full p-2 border border-gray-300 rounded"
                  accept="image/*">
            </div>
            <div class="flex justify-center">
               <img class="rounded-lg shadow-lg shadow-primary-tw" width="200" src=@($"/uploads/{Model.Theater?.Image}")
                  alt="thumb">
            </div>
            <div class="mt-5 flex md:block gap-5">
               <button type="submit" class="w-full p-3 bg-green-500 text-white rounded hover:bg-green-600">Lưu</button>
            </div>
         </div>
      </form>

      <div class="google-map flex justify-center">
         <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.3744067430584!2d106.69557627451728!3d10.782609459080678!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f366a781d37%3A0x1f5346650cf7ceb8!2sCinestar%20Hai%20B%C3%A0%20Tr%C6%B0ng!5e0!3m2!1svi!2s!4v1719163061625!5m2!1svi!2s"
            width="590" height="450" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
   </div>
</div>