@page "/Admin/TicketType/Add"
@{
  Layout = "_AdminLayout";
  ViewData["Title"] = "Admin - Add Ticket Type";
}
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.EntityFrameworkCore
@using the_movie_hub.Models;
@model the_movie_hub.Pages.Admin.Ticket.AddTicketTypeModel


<div class="p-21">
  <div class="p-21 bg-white rounded-lg shadow-lg">
    <div class="bg-white text-black border border-black w-full p-5 rounded-lg shadow-lg">
      <div class="text-center text-xl font-semibold">Thêm loại vé</div>

      <div class="flex justify-between items-center gap-2 mt-4">
        <a href="/Admin/TicketType" class="text-sky-500 underline">Quay lại</a>
      </div>

      @* Body *@
      <div class="mt-8">
        <form method="post" class="flex flex-col gap-4">
          <div class="flex flex-col gap-1">
            <label for="label" class="font-semibold">Loại vé</label>
            <input type="text" id="label" asp-for="Label" class="border border-gray-300 rounded-lg p-2" required />
          </div>

          <div class="flex flex-col gap-1">
            <label for="price" class="font-semibold">Loại phòng</label>
            <select id="roomType" asp-for="RoomTypeId" class="border border-gray-300 rounded-lg p-2" required
              asp-items="@(new SelectList(Model.RoomTypes, "Id", "Title"))">
            </select>
          </div>

          <div class="flex flex-col gap-1">
            <label for="price" class="font-semibold">Giá vé</label>
            <input type="number" id="price" asp-for="Price" class="border border-gray-300 rounded-lg p-2" required />
          </div>

          <div class="flex flex-col gap-1">
            <label for="description" class="font-semibold">Mô tả</label>
            <textarea id="description" asp-for="Description" class="border border-gray-300 rounded-lg p-2"
              required></textarea>
          </div>

          <button class="w-full bg-green-500 px-3 py-2 rounded-lg">Thêm</button>
        </form>
      </div>
    </div>
  </div>
</div>
