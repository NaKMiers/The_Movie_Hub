            </select>
          </div>

          <div class="flex flex-col gap-1">
            <label for="price" class="font-semibold">Giá vé</label>
            <input type="number" id="price" asp-for="Price" class="border border-gray-300 rounded-lg p-2" required />
          </div>

          <div class="flex flex-col gap-1">
            <label for="description" class="font-semibold">Mô tả</label>
            <textarea id="description" asp-for="Description" class="border border-gray-300 rounded-lg p-2"></textarea>
          </div>

          <button class="w-full bg-green-500 px-3 py-2 rounded-lg">Sửa</button>
        </form>
      </div>
    </div>
  </div>
</div>
