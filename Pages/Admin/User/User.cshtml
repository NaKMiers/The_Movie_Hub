            {
                <div class="bg-white border border-dark p-2 rounded-lg shadow-lg">
                    <p class="py-1">Id: <span class="font-semibold text-slate-500">@user.Id</span></p>
                    <p class="py-1">FullName: <span class="font-semibold text-slate-500">@user.FullName</span></p>
                    <p class="py-1">Username: <span class="font-semibold text-slate-500">@user.Username</span></p>
                    <p class="py-1">Email: <span class="font-semibold text-slate-500">@user.Email</span></p>
                    <p class="py-1">Phone: <span class="font-semibold text-slate-500">@user.Phone</span></p>
                    <p class="py-1">Password: <span class="font-semibold text-slate-500">@user.Password</span></p>
                    <p class="py-1">AuthType: <span class="font-semibold text-slate-500">@user.AuthType</span></p>
                    <p class="py-1">Birthday: <span class="font-semibold text-slate-500">@user.Birthday</span></p>
                    <p class="py-1">Expended: <span class="font-semibold text-slate-500">@user.Expended</span></p>
                    <p class="py-1">CCCD: <span class="font-semibold text-slate-500">@user.CCCD</span></p>

                    @* Action Buttons *@
                    <div class="flex gap-2 justify-center items-center border rounded-lg py-1">
                        <form method="post">
                            <input type="hidden" name="Id" value="@user.Id" />
