@page "/Choosecinema"
@{
  Layout = "_Layout";
  ViewData["Title"] = "Chọn rạp";
}
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.EntityFrameworkCore
@using the_movie_hub.Models;
@model the_movie_hub.Models.Main.User

<div class="relative bg-cover bg-center bg-no-repeat h-64"
  style="background-image: url('https://cinestar-api.monamedia.net/media/wysiwyg/CinemaImage/01-Quoc-Thanh-masthead.jpg')">
  <div class="absolute bottom-0 w-full bg-gradient-to-t from-black to-transparent p-4">
    <div class="container mx-auto">
      <div class="flex justify-between items-center">
        <h2 class="text-white text-2xl font-bold">CINESTAR QUỐC THANH</h2>
        <div class="flex">
          <a href="/Choosecinema" class="text-white hover:text-gray-300 font-bold">PHIM ĐANG CHIẾU</a>
          <a href="/Choosecommingsoon" class="text-white hover:text-gray-300 ml-4 font-bold">PHIM SẮP CHIẾU</a>
          <a href="/specialshow" class="text-white hover:text-gray-300 ml-4 font-bold">SUẤT CHIẾU ĐẶC BIỆT</a>
          <a href="/priceticket" class="text-white hover:text-gray-300 ml-4 font-bold">BẢNG GIÁ VÉ</a>
        </div>
      </div>

      <p class="text-white mt-4">6271 Nguyễn Trãi, Phường Nguyễn Cư Trinh, Quận 1, Thành Phố Hồ Chí Minh</p>
    </div>
  </div>

</div>
