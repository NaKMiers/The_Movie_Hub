    arrowRighttwo.addEventListener("click", () => {
        if (currentPosition1 > -50) {
            currentPosition1 -= 50;
            updateMovieListPosition();
        }
    });

    arrowLefttwo.addEventListener("click", () => {
        if (currentPosition1 < 0) {
            currentPosition1 += 50;
            updateMovieListPosition();
        }
    });

    function handleResizeMovieList() {
        currentPosition1 = 0;
        updateMovieListPosition();
    }

    window.addEventListener("load", handleResizeMovieList);
    window.addEventListener("resize", handleResizeMovieList);
