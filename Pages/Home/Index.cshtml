<script>

    const prevButton = document.getElementById('prevButton');
    const nextButton = document.getElementById('nextButton');
    const items = document.querySelectorAll('.carousel-inner .carousel-item');

    let currentIndex = 0;

    function showItem(index) {
        items.forEach((item, i) => {
            item.classList.toggle('active', i === index);
        });
    }

    prevButton.addEventListener('click', () => {
        currentIndex = (currentIndex > 0) ? currentIndex - 1 : items.length - 1;
        showItem(currentIndex);
    });

    nextButton.addEventListener('click', () => {
        currentIndex = (currentIndex < items.length - 1) ? currentIndex + 1 : 0;
        showItem(currentIndex);
    });
    ////
    function toggleNav(selector) {
        const nav = document.querySelector(selector);
        nav.style.display = nav.style.display === 'none' || nav.style.display === '' ? 'block' : 'none';
    }

    document.querySelector('.book-ticket-choose-cinema').addEventListener('click', function () {
        toggleNav('.book-ticket-choose-cinema-nav');
    });

    document.querySelector('.book-ticket-choose-movie').addEventListener('click', function () {
        toggleNav('.book-ticket-choose-movie-nav');
    });

    document.querySelector('.book-ticket-choose-date').addEventListener('click', function () {
        toggleNav('.book-ticket-choose-date-nav');
    });

    document.querySelector('.book-ticket-choose-time').addEventListener('click', function () {
        toggleNav('.book-ticket-choose-time-nav');
    });

    /////
    // Blograesel
    const arrowRight = document.getElementById("next_right");
    const arrowLeft = document.getElementById("prev_left");
    const blocks = document.getElementById(
        "Slide_Blogcarousel"
    );

    let currentPosition = 0;

    function updateBlockPosition() {
        blocks.style.transform = `translateX(${currentPosition}%)`;
    }

    arrowRight.addEventListener("click", () => {
        if (currentPosition > -50) {
            currentPosition -= 50;
            updateBlockPosition();
        }
    });

    arrowLeft.addEventListener("click", () => {


        if (currentPosition < 0) {
            currentPosition += 50;
            updateBlockPosition();
        }
    });

    function handleResize() {
        if (window.innerWidth <= 990) {
            currentPosition = 0;
        } else {
            currentPosition = 0;
        }

        updateBlockPosition();
    }

    window.addEventListener("load", handleResize);
    window.addEventListener("resize", handleResize);
    ////
    // Carousel cho các bộ phim sắp tới
    const arrowRighttwo = document.getElementById("next_right_two");
    const arrowLefttwo = document.getElementById("prev_left_two");
    const movieList = document.getElementById("movieList");

    let currentPosition1 = 0;

    function updateMovieListPosition() {
        movieList.style.transform = `translateX(${currentPosition1}%)`;
