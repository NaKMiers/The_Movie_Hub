<script>
    const arrowRight = document.querySelector(".next");
    const arrowLeft = document.querySelector(".prev");
    const slidesContainer = document.querySelector(".slide_nomain_four_image");
    let currentPosition = 0;

    function updateBlockPosition() {
        slidesContainer.style.transform = `translateX(${currentPosition}%)`;
    }

    function handleResize() {
        if (window.innerWidth <= 990) {
            currentPosition = 0;
        } else if (window.innerWidth <= 1200) {
            currentPosition = 0;
        } else {
            currentPosition = 0;
        }
        updateBlockPosition();
    }

    arrowRight.addEventListener("click", () => {
        if (currentPosition > -16) {
            currentPosition -= 9;
        }
        updateBlockPosition();
    });

    arrowLeft.addEventListener("click", () => {
        if (currentPosition < 0) {
            currentPosition -= -9;
        }
        updateBlockPosition();
    });

    window.addEventListener("load", handleResize);
    window.addEventListener("resize", handleResize);

    
</script>