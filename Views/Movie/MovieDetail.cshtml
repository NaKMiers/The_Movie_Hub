        document.addEventListener("DOMContentLoaded", function () {
            const boxTimes = document.querySelectorAll(".Box-time");

            // Chỉ đặt lớp active cho box time đầu tiên
            if (boxTimes.length > 0) {
                boxTimes[0].classList.add("active");
            }

            // Thêm sự kiện click cho mỗi box-time
            boxTimes.forEach(function (boxTime) {
                boxTime.addEventListener("click", function () {
                    // Xóa lớp active khỏi tất cả các phần tử Box-time
                    boxTimes.forEach(function (bt) {
                        bt.classList.remove("active");
