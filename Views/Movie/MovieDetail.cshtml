                    boxTime.classList.add("active");
                });
            });
        });


        document.addEventListener("DOMContentLoaded", function () {
            const boxTimes = document.querySelectorAll(".Box-time");
            const timeOffsets = [0, 1, 2, 3]; // Offset thời gian cho từng thẻ, ví dụ: 0 là hiện tại, 1 là +1 ngày, 2 là +2 ngày, v.v.

            // Hàm để lấy ngày và thứ dựa trên offset thời gian
            function getDayOfWeekAndDate(offset) {
                const days = ['Chủ Nhật', 'Thứ Hai', 'Thứ Ba', 'Thứ Tư', 'Thứ Năm', 'Thứ Sáu', 'Thứ Bảy'];
                const currentDate = new Date();
                currentDate.setDate(currentDate.getDate() + offset);
                const dayOfWeek = days[currentDate.getDay()];
                const dateOfMonth = currentDate.getDate();
                const month = currentDate.getMonth() + 1; // Lấy tháng từ 0 đến 11, nên cần +1
                return { dayOfWeek, dateOfMonth, month };
            }

            // Cập nhật nội dung của các phần tử ".Box-time" dựa trên offset thời gian
            function updateBoxTimes() {
                timeOffsets.forEach((offset, index) => {
                    const currentDay = getDayOfWeekAndDate(offset);
                    const h3Element = boxTimes[index].querySelector("h3");
                    const pElement = boxTimes[index].querySelector("p");
                    // Cập nhật nội dung của thẻ h3 (ngày) và thẻ p (thứ)
                    h3Element.textContent = currentDay.dateOfMonth + "/" + currentDay.month;
                    pElement.textContent = currentDay.dayOfWeek;
                });
            }

            // Gọi hàm cập nhật ngay khi trang được tải và sau mỗi giây (để cập nhật tự động)
            updateBoxTimes();
            setInterval(updateBoxTimes, 1000); // Cập nhật mỗi giây
        });



        document.addEventListener("DOMContentLoaded", function () {
            const boxTimes = document.querySelectorAll(".Box-time");
            const HoChiMinhElements = document.querySelectorAll('[class^="HoChiMinh"]');

            // Hàm lưu trạng thái hiển thị vào localStorage
            function saveStateToLocalStorage(index) {
                localStorage.setItem("activeBoxTimeIndex", index.toString());
            }

            // Hàm khôi phục trạng thái từ localStorage (nếu có)
            function restoreStateFromLocalStorage() {
                const index = localStorage.getItem("activeBoxTimeIndex");
                if (index !== null) {
                    const selectedIndex = parseInt(index);
                    // Chỉ hiển thị phần tử "HoChiMinh" và đánh dấu là "active" cho box-time tương ứng
                    HoChiMinhElements[selectedIndex].style.display = 'block';
                    boxTimes[selectedIndex].classList.add("active");
                }
            }

            // Thiết lập trạng thái ban đầu cho box time đầu tiên và thẻ div HoChiMinh1
            function setInitialState(index = 0) {
                // Xóa lớp active khỏi tất cả các phần tử Box-time
                boxTimes.forEach(function (bt) {
                    bt.classList.remove("active");
                });

                // Ẩn tất cả các phần tử "HoChiMinh" trước khi hiển thị phần tử tương ứng
                HoChiMinhElements.forEach(function (HoChiMinh) {
                    HoChiMinh.style.display = 'none';
                });

                // Hiển thị phần tử "HoChiMinh" tương ứng với box time được nhấn
                HoChiMinhElements[index].style.display = 'block';

                // Đánh dấu box-time là "active"
                boxTimes[index].classList.add("active");
                saveStateToLocalStorage(index);
            }

            // Gọi hàm thiết lập trạng thái ban đầu khi trang được tải lên
            setInitialState();

            // Khi có sự kiện click vào box-time, cập nhật trạng thái
            boxTimes.forEach(function (boxTime, index) {
                boxTime.addEventListener("click", function () {
                    setInitialState(index);
                });
            });

            // Khôi phục trạng thái từ localStorage nếu có
            restoreStateFromLocalStorage();
        });


