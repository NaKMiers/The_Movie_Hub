<script>
    var Showtime1 = document.querySelector('.Showtime-date-time-1');
    var Showtime2 = document.querySelector('.Showtime-date-time-2');
    var Showtime3 = document.querySelector('.Showtime-date-time-3');
    var Showtime4 = document.querySelector('.Showtime-date-time-4');

    Showtime1.addEventListener('click', function () {
        Showtime1.style.backgroundColor = '#f3ea28';
        Showtime1.style.color = '#663a91';
        Showtime2.style.backgroundColor = '#000';
        Showtime2.style.color = '#f3ea28';
        Showtime3.style.backgroundColor = '#000';
        Showtime3.style.color = '#f3ea28';
        Showtime4.style.backgroundColor = '#000';
        Showtime4.style.color = '#f3ea28';
    });
    Showtime2.addEventListener('click', function () {
        Showtime2.style.backgroundColor = '#f3ea28';
        Showtime2.style.color = '#663a91';
        Showtime1.style.backgroundColor = '#000';
        Showtime1.style.color = '#f3ea28';
        Showtime3.style.backgroundColor = '#000';
        Showtime3.style.color = '#f3ea28';
        Showtime4.style.backgroundColor = '#000';
        Showtime4.style.color = '#f3ea28';
    });
    Showtime3.addEventListener('click', function () {
        Showtime3.style.backgroundColor = '#f3ea28';
        Showtime3.style.color = '#663a91';
        Showtime1.style.backgroundColor = '#000';
        Showtime1.style.color = '#f3ea28';
        Showtime2.style.backgroundColor = '#000';
        Showtime2.style.color = '#f3ea28';
        Showtime4.style.backgroundColor = '#000';
        Showtime4.style.color = '#f3ea28';
    });
    Showtime4.addEventListener('click', function () {
        Showtime4.style.backgroundColor = '#f3ea28';
        Showtime4.style.color = '#663a91';
        Showtime1.style.backgroundColor = '#000';
        Showtime1.style.color = '#f3ea28';
        Showtime3.style.backgroundColor = '#000';
        Showtime3.style.color = '#f3ea28';
        Showtime2.style.backgroundColor = '#000';
        Showtime2.style.color = '#f3ea28';
    });

    var buttonMovie = document.querySelector('.dropbtn_movie');
    var buttonCinema = document.querySelector('.dropbtn_cinema');
    var buttoniconmovie = document.querySelector('.dropdown-icon');
    var buttoniconcinema = document.querySelector('.dropdown-icon-cinema');
    var dropdownContentMovie = document.querySelector('.dropdown-content');
    var dropdownContentCinema = document.querySelector('.dropdown-content-cinema');

    // Toggle display of dropdowns when buttons are clicked
    buttoniconmovie.addEventListener('click', function (event) {
        event.stopPropagation();
        if (dropdownContentMovie.style.display = 'block') {
            dropdownContentMovie.style.display = 'none';
        } else {
            dropdownContentMovie.style.display = 'block';
            dropdownContentCinema.style.display = 'none'; // Hide other dropdown
        }
    });
    buttonMovie.addEventListener('click', function (event) {
        event.stopPropagation();
        if (dropdownContentMovie.style.display === 'block') {
            dropdownContentMovie.style.display = 'none';
        } else {
            dropdownContentMovie.style.display = 'block';
            dropdownContentCinema.style.display = 'none'; // Hide other dropdown
        }
    });
    buttoniconcinema.addEventListener('click', function (event) {
        event.stopPropagation();
        if (dropdownContentCinema.style.display === 'block') {
            dropdownContentCinema.style.display = 'none';
        } else {
            dropdownContentCinema.style.display = 'block';
            dropdownContentMovie.style.display = 'none'; // Hide other dropdown
        }
    });
    buttonCinema.addEventListener('click', function (event) {
        event.stopPropagation();
        if (dropdownContentCinema.style.display === 'block') {
            dropdownContentCinema.style.display = 'none';
        } else {
            dropdownContentCinema.style.display = 'block';
            dropdownContentMovie.style.display = 'none'; // Hide other dropdown
        }
    });

    // Hide dropdowns when clicking outside
    document.addEventListener('click', function () {
        dropdownContentMovie.style.display = 'none';
        dropdownContentCinema.style.display = 'none';
    });

    // Prevent event propagation when clicking inside the dropdown
    dropdownContentMovie.addEventListener('click', function (event) {
        event.stopPropagation();
    });

    dropdownContentCinema.addEventListener('click', function (event) {
        event.stopPropagation();
    });
    @* buttoniconmovie.addEventListener('click', function (event) {
        event.stopPropagation();
        if (dropdownContentMovie.style.display === 'block') {
        dropdownContentMovie.style.display = 'none';
        } else {
        dropdownContentMovie.style.display = 'block';
        dropdownContentCinema.style.display = 'none'; // Hide other dropdown
        }
        }); *@
</script>